# Use Python 3.11 instead of 3.12 for better TTS compatibility
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set work directory
WORKDIR /app

# Install system dependencies required for PyNaCl, discord.py, and Coqui TTS
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libffi-dev \
    libsodium-dev \
    ffmpeg \
    espeak \
    espeak-data \
    alsa-utils \
    libsndfile1 \
    libsndfile1-dev \
    build-essential \
    python3-dev \
    git \
    pkg-config \
    libssl-dev \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY requirements-basic.txt .
COPY requirements.txt .

# Install basic requirements first
RUN pip install --no-cache-dir -r requirements-basic.txt

# Try to install TTS, but don't fail if it doesn't work
RUN pip install --no-cache-dir \
    numpy>=1.21.0 \
    torch>=1.13.0 \
    torchaudio>=0.13.0 \
    soundfile>=0.12.1 \
    librosa>=0.9.0 \
    || echo "Warning: Some audio dependencies failed to install"

# Try to install TTS, but continue even if it fails
RUN pip install --no-cache-dir TTS>=0.13.0 || echo "Warning: TTS installation failed, bot will run without TTS"

# Copy application code
COPY app/ .

# Create logs directory
RUN mkdir -p logs

# Create a non-root user for security
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app

# Switch to non-root user
USER app

# Health check to ensure the bot is running
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)" || exit 1

# Command to run the application
CMD ["python", "bellboy.py"]
