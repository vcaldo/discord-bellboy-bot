# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_guild_id_here
LOG_LEVEL=INFO
TTS_LANGUAGE=en
TTS_MODEL=tts_models/en/ljspeech/fast_pitch
TTS_CACHE_SIZE=50

# New Relic Configuration
# REQUIRED: Get your license key from: https://one.newrelic.com/launcher/api-keys-ui.api-keys-launcher
# Your license key should start with "NRAL-"
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
NEW_RELIC_APP_NAME=Discord-Bellboy-Bot
NEW_RELIC_ENVIRONMENT=production

# Optional New Relic debugging (remove these after setup is working)
# NEW_RELIC_LOG_LEVEL=info
# NEW_RELIC_LOG_FILE=stderr

# Optional: Use configuration file instead of environment variables
# NEW_RELIC_CONFIG_FILE=/app/newrelic.ini
